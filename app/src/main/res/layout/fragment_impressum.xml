            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="Vertretungsberechtigter Vorstand:"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gesetzlicher Vertreter des DLR ist der Vorstand, bestehend aus Prof. Dr. Pascale Ehrenfreund (Vorsitzende), Klaus Hamacher, Prof. Rolf Henke, Prof. Dr. Karsten Lemmer, Prof. Dr. rer. nat. Hansjörg Dittus und Dr. Gerd Gruppe." />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="Registergericht / Registernummer:"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amtsgericht Bonn, VR 2780" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="Umsatzsteuer-Identifikationsnummer:"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DE 121965658" />

        </LinearLayout>

        <Space
            android:layout_width="10dip"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konzeptionierung und Umsetzung:"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tobias Bohnhardt (tobias.bohnhardt@dlr.de), Till Siebert (till.siebert@dlr.de), Simon Kronawitter (skronawi@googlemail.com)" />

